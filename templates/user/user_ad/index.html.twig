{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block body %}
    <h1>Ad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>City</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ ad.id }}</td>
                <td>{{ ad.title }}</td>
                <td>{{ ad.description }}</td>
                <td>{{ ad.price }}</td>
                <td>{{ ad.createAt ? ad.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ad.updateAt ? ad.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ad.city }}</td>
                <td>{{ ad.zipCode }}</td>
                <td>
                    <a href="{{ path('user_ad_show', {'id': ad.id}) }}">show</a>
                    <a href="{{ path('user_ad_edit', {'id': ad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_ad_new') }}">Create new</a>
{% endblock %}
